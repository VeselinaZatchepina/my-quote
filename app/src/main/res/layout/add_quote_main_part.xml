<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/add_main_card_margin_bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/add_main_linear_margin"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/addQuoteTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/add_main_quote_text_margin">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/addQuoteText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/add_main_quote_text_hint"
                android:inputType="textMultiLine"/>

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/add_main_spinner_title_margin"
            android:text="@string/add_main_spinner_title_text"/>

        <Spinner
            android:id="@+id/addCategorySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:id="@+id/spinnerDivider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/add_main_spinner_divider_height"
            android:layout_marginBottom="@dimen/add_main_spinner_divider_margin_bottom"
            android:layout_marginEnd="@dimen/add_main_spinner_divider_margin_end"
            android:layout_marginStart="@dimen/add_main_spinner_divider_margin_start"
            android:layout_marginTop="@dimen/add_main_spinner_divider_margin_top"
            android:background="@android:color/black"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
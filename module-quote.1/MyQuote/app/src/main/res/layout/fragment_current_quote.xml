<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/current_quote_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/cardview_margin"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="@dimen/corner_radius"
        card_view:cardElevation="@dimen/card_elevation"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/linear_layout_current_quote_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/current_quote_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:theme="@style/TextStyleBlack"
                tools:text="quote text" />

            <View
                android:id="@+id/text_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_current_quote"
                android:layout_marginTop="@dimen/divider_current_quote_margin_Top"
                android:background="@color/card_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/linear_layout_current_quote_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/quote_author_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/quote_author_title" />

                <TextView
                    android:id="@+id/current_author_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_value"
                    android:theme="@style/TextStyleBlack"
                    tools:text="Author Name" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/linear_layout_current_quote_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/book_name_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/book_name_title" />

                <TextView
                    android:id="@+id/current_book_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_value"
                    android:theme="@style/TextStyleBlack"
                    tools:text="Book name" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/linear_layout_current_quote_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/publisher_name_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/publisher_name_title" />

                <TextView
                    android:id="@+id/current_publisher_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_value"
                    android:theme="@style/TextStyleBlack"
                    tools:text="publisher name" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/linear_layout_current_quote_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/year_number_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/year_number_title" />

                <TextView
                    android:id="@+id/current_year_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_value"
                    android:theme="@style/TextStyleBlack"
                    tools:text="year number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/linear_layout_current_quote_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/page_number_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/page_number_title" />

                <TextView
                    android:id="@+id/current_page_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_value"
                    android:theme="@style/TextStyleBlack"
                    tools:text="page number" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/linear_layout_current_quote_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/quote_creation_date_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/quote_creation_date_title" />

                <TextView
                    android:id="@+id/quote_creation_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_value"
                    android:theme="@style/TextStyleBlack"
                    tools:text="date" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/current_quote_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/cardview_margin_top"
    android:layout_marginBottom="@dimen/cardview_margin_bottom"
    android:layout_marginStart="@dimen/cardview_margin_start"
    android:layout_marginEnd="@dimen/cardview_margin_end"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="@dimen/corner_radius"
    card_view:cardElevation="@dimen/card_elevation"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/activity_get_idea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/linear_layout_margin"
        android:orientation="vertical"
        tools:context="com.developer.cookie.myquote.idea.activities.GetIdeaActivity">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/subject_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/type_word" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_view_subtitle_margin_bottom"
            android:layout_marginTop="@dimen/text_view_subtitle_margin_top"
            android:text="@string/other_action" />

        <Button
            android:id="@+id/generate_button"
            android:layout_width="@dimen/button_height"
            android:layout_height="@dimen/button_width"
            android:layout_gravity="center"
            android:background="@drawable/get_idea_button_shape"
            android:text="@string/idea_button_text"
            android:textColor="@android:color/white" />

    </LinearLayout>

</android.support.v7.widget.CardView>

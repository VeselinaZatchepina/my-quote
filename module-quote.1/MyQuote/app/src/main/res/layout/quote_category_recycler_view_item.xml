<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/category_vertical_margin"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/category_cardview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/category_card_view_height"
        card_view:cardCornerRadius="@dimen/corner_radius"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="@color/card_background">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/card_view_horizontal_margin"
            android:layout_marginRight="@dimen/card_view_horizontal_margin"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/category_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_delete_white_24dp"
                android:layout_marginEnd="@dimen/image_view_horizontal_margin"
                android:contentDescription="@string/image_content_description"/>

            <TextView
                android:id="@+id/quote_category_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:layout_gravity="center"
                tools:text="Philosophy"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/quote_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                tools:text="1" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
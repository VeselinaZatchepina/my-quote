<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.developer.cookie.myquote">

    <application
        android:name=".MyQuoteApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".quote.activities.QuoteCategoryMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".quote.activities.AddQuoteActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".quote.activities.AllQuoteCurrentCategoryActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".quote.activities.QuoteCategoryMainActivity" />
        <activity
            android:name=".quote.activities.CurrentQuotePagerActivity"
            android:parentActivityName=".quote.activities.AllQuoteCurrentCategoryActivity" />
        <activity android:name=".idea.activities.GetIdeaActivity" />
        <activity
            android:name=".idea.activities.IdeaCoincideQuoteTextActivity"
            android:parentActivityName=".idea.activities.GetIdeaActivity" />
    </application>

</manifest>